{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "paths": {
      "Src/*": [
        "./src/*"
      ],
      "DOM/*": [
        "./src/DOM/*"
      ],
      "Base/*": [
        "./src/Base/*"
      ]
    }
  },
  "include": [
    "./index.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
}