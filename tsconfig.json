{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "paths": {
      "Src/*": ["./src/*"],
      "DOM/*": ["./src/DOM/*"],
      "Base/*": ["./src/Base/*"]
    }
  },
  "include": [
    "./index.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
}